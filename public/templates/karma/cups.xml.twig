<manialink id="91105">
    <frame posn="{{ pos_x }} {{ pos_y }} 10">
        <frame posn="2.23 -4.95 0.01">
            {% for cup in cups %}
            <quad posn="{{ cup.x }} 0 {{ cup.z }}" sizen="{{ cup.width }} {{ cup.height }}"
                  valign="bottom" image="{{ cup.image }}"/>
            {% endfor %}
        </frame>

        <frame posn="2.1 -5.35 0">
            <quad posn="0 -0.1 1" sizen="0.1 2.85" bgcolor="FFF5"/>
            <label posn="0.3 -0.1 1" sizen="4 1.1" textsize="1" scale="0.65" textcolor="FFFF" text="GLOBAL"/>
            <label posn="3.3 0 1" sizen="3 1.4" textsize="1" scale="0.9" textcolor="{{ global_color }}"
                   text="{{ global_karma }}"/>
            <label posn="0.3 -1.3 1" sizen="6.6 1.2" textsize="1" scale="0.85" textcolor="0F3F"
                   text="{{ global_total }} {{ global_label }}"/>
        </frame>

        <frame posn="8.75 -5.35 0">
            <quad posn="0 -0.1 1" sizen="0.1 2.85" bgcolor="FFF5"/>
            <label posn="0.3 -0.1 1" sizen="4 1.1" textsize="1" scale="0.65" textcolor="FFFF" text="LOCAL"/>
            <label posn="3.3 0 1" sizen="3 1.4" textsize="1" scale="0.9" textcolor="{{ local_color }}"
                   text="{{ local_karma }}"/>
            <label posn="0.3 -1.3 1" sizen="6.6 1.2" textsize="1" scale="0.85" textcolor="0F3F"
                   text="{{ local_total }} {{ local_label }}"/>
        </frame>
    </frame>
</manialink>
